<!DOCTYPE html>
<html lang="en">
<%- include('../includes/head.ejs') %>
<body>
        <%- include('../includes/nav.ejs') %>

            <main>
                <h1>Dogs I have registered for adoption:</h1><br><br>
                <% if (pets.length > 0) { %>
                    <div class="grid">
                        <% for (let pet of pets) { %>
                            <article class="card pet-item">
                                <div class="card__image">
                                    <img src="<%= pet.imageUrl %>" alt="<%= pet.name %>">
                                </div>
                                <div class="card__content">
                                    <h1 class="pet__name">Name: 
                                        <%= pet.name %>
                                    </h1>
                                    <h2 class="pet__temperament">Gender:
                                        <%= pet.gender %>
                                    </h2>
                                    <h2 class="pet__age">Age:
                                        <%= pet.age %>
                                    </h2>
                                    <h2 class="pet__age">Size:
                                        <%= pet.size %>
                                    </h2>
                                    <p class="pet__description">Description:
                                        <%= pet.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-pet/<%= pet._id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-pet" method="POST">
                                        <input type="hidden" value="<%= pet._id %>" name="petId">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn" type="submit">Remove</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No pets Found!</h1>
                    <% } %>
            </main>

            <%- include('../includes/footer.ejs') %>
