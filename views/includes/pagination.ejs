<section style="text-align: center;">
    <% if (currentPage !== 1 && previousPage !== 1) { %>
      <a href="<%= page.path %>/?page=1">First</a>
    <% } %>
    <% if (hasPreviousPage) { %>
      <a href="<%= page.path %>/?page=<%= previousPage %>">Prev</a>
    <% } %>
    <a href="<%= page.path %>/?page=<%= currentPage %>"><%= currentPage %></a>  
    <% if (hasNextPage) { %>
      <a href="<%= page.path %>/?page=<%= nextPage %>">Next</a>
    <% } %>
    <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
      <a href="<%= page.path %>/?page=<%= lastPage %>">Last</a>
    <% } %>
</section>